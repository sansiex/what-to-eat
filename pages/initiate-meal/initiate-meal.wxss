/* pages/initiate-meal/initiate-meal.wxss */

.btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #fff;
  text-align: center;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(255, 107, 107, 0.4);
}

.btn:active {
  background: linear-gradient(135deg, #FF5252 0%, #FF7043 100%);
}

.btn[disabled] {
  background: #d0d0d0;
  color: #999;
  box-shadow: none;
}

button {
  background-color: #f0f0f0;
  color: #333;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

button:active {
  background-color: #e0e0e0;
}

.dialog-content .input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  background-color: #fafafa;
}