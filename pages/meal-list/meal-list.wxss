/* pages/meal-list/meal-list.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #ccc;
}

/* 点餐列表 */
.meal-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.meal-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.meal-info {
  margin-bottom: 20rpx;
}

.meal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.meal-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-ordering {
  background-color: #e6f7ff;
  color: #007AFF;
}

.status-closed {
  background-color: #f0f0f0;
  color: #999;
}

.meal-time {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.meal-dishes {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* 操作按钮 */
.meal-actions {
  display: flex;
  gap: 16rpx;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.action-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 16rpx 0;
  border-radius: 8rpx;
  border: none;
  color: #fff;
}

.btn-edit {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.btn-close {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.btn-order {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.action-btn::after {
  border: none;
}
