/* app.wxss */
page, view, text, button, input, image, scroll-view, swiper, swiper-item {
  box-sizing: border-box;
}

page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
}

.container {
  padding: 24rpx;
}

.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.btn {
  display: block;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  text-align: center;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.btn:active {
  background: linear-gradient(135deg, #5a6fd6 0%, #6a4190 100%);
}

.input {
  width: 100%;
  padding: 20rpx 24rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  background-color: #fafafa;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item__content {
  flex: 1;
}

.list-item__title {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  color: #333;
}

.list-item__desc {
  font-size: 24rpx;
  color: #999;
}

.list-item__actions {
  display: flex;
  align-items: center;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin-left: 16rpx;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  color: #999;
}

.search-input {
  flex: 1;
  border: none;
  background-color: transparent;
  font-size: 32rpx;
  color: #333;
}

.search-input:focus {
  outline: none;
}

.dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.dialog-content {
  background-color: #fff;
  border-radius: 16rpx;
  width: 80%;
  max-width: 500rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.dialog-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
  text-align: center;
  color: #333;
}

.dialog-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 32rpx;
  gap: 16rpx;
}

.dialog-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
}

.dialog-btn--cancel {
  background-color: #f5f5f5;
  color: #666;
}

.dialog-btn--confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}
