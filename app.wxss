/* app.wxss */
* {
  box-sizing: border-box;
}

page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
}

.container {
  padding: 16rpx;
}

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.btn {
  display: block;
  background-color: #007AFF;
  color: #fff;
  text-align: center;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 20rpx;
}

.btn:active {
  background-color: #0066CC;
}

.input {
  width: 100%;
  padding: 16rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item__content {
  flex: 1;
}

.list-item__title {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.list-item__desc {
  font-size: 24rpx;
  color: #999;
}

.list-item__actions {
  display: flex;
  align-items: center;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin-left: 16rpx;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  margin-bottom: 16rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  color: #999;
}

.search-input {
  flex: 1;
  border: none;
  background-color: transparent;
  font-size: 32rpx;
}

.search-input:focus {
  outline: none;
}

.dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.dialog-content {
  background-color: #fff;
  border-radius: 12rpx;
  width: 80%;
  max-width: 500rpx;
  padding: 24rpx;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  text-align: center;
}

.dialog-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 32rpx;
}

.dialog-btn {
  flex: 1;
  padding: 16rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 32rpx;
}

.dialog-btn--cancel {
  background-color: #f5f5f5;
  margin-right: 12rpx;
}

.dialog-btn--confirm {
  background-color: #007AFF;
  color: #fff;
  margin-left: 12rpx;
}
